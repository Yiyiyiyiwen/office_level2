/* pages/tabs/my/my.wxss */
page{
  width: 100%;
  height: 100%;
}
.top{
  height: 400rpx;
  width: 100%;
  background-image: url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1540477052918&di=c918d8b3d4b44574d0d53cb7689506ed&imgtype=0&src=http%3A%2F%2Fimgsrc.baidu.com%2Fimgad%2Fpic%2Fitem%2F810a19d8bc3eb135acec879fac1ea8d3fd1f44ee.jpg');
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  position: relative;
}
.head image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 2px blue solid;
}
.head{
  text-align: center;
}
.chat{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.update{
  position: absolute;
  right: 0;
  bottom: 40rpx;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  background: rgba(0, 0, 0,0.3);
  font-size: 25rpx;
  color: white;
  height: 60rpx;
  padding-right: 10rpx;
  display: flex;
  padding-left: 5rpx;
  align-items: center;
}
.update image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  border: 1rpx black solid;
  border-radius: 50%;
  overflow: hidden;
}
.total{
  width: 100%;
  height: 100%;
  background: #eeeeee;
}
.change{
  background: white;
  width: 100%;
  display: flex;
  align-items: center;
  position: relative;
  padding: 20rpx 0;
  border-bottom: 5rpx #eeeeee solid;
}
.change image{
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.dtjl{
  font-size: 25rpx;
  font-weight: bold;
}
.exer_change{
  position: absolute;
  right: 10rpx;
  font-size: 28rpx;
  color: grey;
  margin-right: 10rpx;
}
.record_item{
  text-align: center;
}
.record_data{
  color: #39b88d;
  font-size: 40rpx;
}
.record{
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: white;
  padding: 30rpx 20rpx;
}
.title{
  font-size: 28rpx;
  margin: 10rpx 0 5rpx 0;
}
.describe{
  font-size: 25rpx;
  color: grey;
}
.buttons{
  margin-top: 20rpx;
  background: white;
}
.buttons_item{
  display: flex;
  align-items: center;
  position: relative;
  font-size: 28rpx;
  border-bottom: 2rpx #eeeeee solid;
  padding: 20rpx 0;
}
.buttons_item image{
  width: 50rpx;
  height: 50rpx;
  margin: 0 20rpx;
}
.jump{
  position: absolute;
  right: 20rpx;
  color: grey;
}